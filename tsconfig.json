{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./lib",
    "target": "es2017",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true,
    "listFiles": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "lib/types",
    "sourceMap": true,
    "importHelpers": true,
    "resolveJsonModule": false,
    "types": [
      "jest",
      "@types/node"
    ]
  },
  "exclude": [
    "coverage",
    "lib",
    "node_modules"
  ]
}
